{# -- Layout template for HTML pages -- #}
{% extends "_boilerplate/_layouts/base-html-layout.twig" %}

{# -- Any <meta> tags that should be included in the <head> #}
{% block headMeta %}

{% endblock headMeta %}

{# -- Any <link> tags that should be included in the <head> #}
{% block headLinks %}

    {# Site Styles #}
    <link rel="stylesheet" href="{{ siteUrl }}assets/index.css">

{% endblock headLinks %}

{# -- Any CSS that should be included before </head> -- #}
{% block headCss %}
{#    {% include "_inline-css/site-fonts.css" %}#}
{% endblock headCss %}

{# -- Page body -- #}
{% block bodyHtml %}

    {# -- Info header, including _navbar.twig -- #}
    {% include "_layouts/_header.twig" %}


    <main>

        {% block content %}

        {% endblock %}

    </main>
    {# -- Content that appears below the primary content block -- #}
    {% block subcontent %}
    {% endblock %}

    {# -- HTML Footer -- #}
    {% include "_layouts/_footer.twig" %}

    {# Site Scripts #}
    <script src="{{ siteUrl }}assets/scripts.min.js"></script>

{% endblock bodyHtml %}
