{% if order.value == 'menu' %}
    {% set entries = craft.entries()
        .section(section)
        .limit(limit)
    %}
{% else %}
    {% set entries = craft.entries()
        .section(section)
        .orderBy(order.value)
        .limit(limit)
    %}
{% endif %}

<section class="grid-row {{ row.type.handle }} {{ rowSpace }} {{ row.rowColour ?? '' }} {{ row.paddingTop ?? ''}} {{ row.paddingBottom ?? '' }}">
    <div class="grid {{ rowLayout }} {{ row.rowWidth ?? '' }} {{ gridGap }} {{ blockSize ?? '' }}">
        {% if entries|length %}
            {% for entry in entries.all() %}
                {% include '_layouts/_block-partials/_entry-card.twig' %}
            {% endfor %}
        {% endif %}
    </div>
</section>
