{
  "buttons": [
    "html",
    "formatting",
    "bold",
    "italic",
    "underline",
    "unorderedlist",
    "orderedlist",
    "link",
    "blockquote",
    "image"

  ],
  "plugins": [
    "alignment",
    "customstyles"
  ],
  "formattingAdd": {
    "introText": {
      "title": "Intro Text",
      "api": "module.block.format",
      "args": {
        "tag": "p",
        "class": "intro"
      }
    },
    "bigText": {
      "title": "Big Text",
      "api": "module.block.format",
      "args": {
        "tag": "p",
        "class": "big"
      }
    }
  },
  "linkNewTab": true,
  "toolbarFixed": true,
  "customStyles": {
    "buttonStyle": {
      "dropdown": {
        "primaryButton": {
          "args": {
            "tag": "span",
            "class": "button primary",
            "type": "toggle"
          }
        },
        "secondaryButton": {
          "args": {
            "tag": "span",
            "class": "button secondary",
            "type": "toggle"
          }
        },
        "ghostButton": {
          "args": {
            "tag": "span",
            "class": "button ghost",
            "type": "toggle"
          }
        },
        "clearStyles": {
          "api": "module.inline.clearformat"
        }
      }
    },
    "fontStyle": {
      "dropdown": {
        "headingFont": {
          "args": {
            "tag": "span",
            "class": "heading-font",
            "type": "toggle"
          }
        },
        "bodyFont": {
          "args": {
            "tag": "span",
            "class": "body-font",
            "type": "toggle"
          }
        },
        "outLine": {
          "args": {
            "tag": "span",
            "class": "outline",
            "type": "toggle"
          }
        },
        "clearStyles": {
          "api": "module.inline.clearformat"
        }

      }
    },
    "fontColor": {
      "dropdown": {
        "Primary": {
          "args": {
            "tag": "span",
            "class": "color-primary-main",
            "type": "toggle"
          }
        },
        "Secondary": {
          "args": {
            "tag": "span",
            "class": "color-secondary-main",
            "type": "toggle"
          }
        },
        "Tertiary": {
          "args": {
            "tag": "span",
            "class": "color-tertiary-main",
            "type": "toggle"
          }
        },
        "Quaternary": {
          "args": {
            "tag": "span",
            "class": "color-quaternary-main",
            "type": "toggle"
          }
        },
        "Green": {
          "args": {
            "tag": "span",
            "class": "color-base-green",
            "type": "toggle"
          }
        },
        "Orange": {
          "args": {
            "tag": "span",
            "class": "color-base-orange",
            "type": "toggle"
          }
        },
        "Red": {
          "args": {
            "tag": "span",
            "class": "color-base-red",
            "type": "toggle"
          }
        },
        "clearStyles": {
          "api": "module.inline.clearformat"
        }

      }
    },
    "fontSize": {
      "dropdown": {
        "H1": {
          "args": {
            "tag": "span",
            "class": "h1",
            "type": "toggle"
          }
        },
        "H2": {
          "args": {
            "tag": "span",
            "class": "h2",
            "type": "toggle"
          }
        },
        "H3": {
          "args": {
            "tag": "span",
            "class": "h3",
            "type": "toggle"
          }
        },
        "clearStyles": {
          "api": "module.inline.clearformat"
        }
      }
    }
  }
}
